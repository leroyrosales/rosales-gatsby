@charset "UTF-8";

/*****************************/
/* RSVP Widget Styles
/*****************************/

#fb-rsvp, .fb-rsvp-modal-status-box {
	clear:both;
	background-color:white;
	color:#545454;
	padding:10px;
	border:1px solid #808080;
	margin: 10px 0;
	font: 11px "Lucida Sans Unicode", "Lucida Grande", Arial, Helvetica, sans-serif;

}

.fb-rsvp-modal-status-box {margin:0 auto; width:97%; border:none; padding:6px;}

.fb-rsvp-modal-status-box:after {content:" "; display:block; clear:both;}

.fb-rsvp-modal-list * {color:#545454; font-weight:normal; font: 9px "Lucida Sans Unicode", "Lucida Grande", Arial, Helvetica, sans-serif; text-align:center;}

#fb-loading {
	float: none;
	border: 0px;
	padding: 30px 60px;
	padding-left:auto;
	padding-right:auto;
}

#fb-rsvp-status { 
	margin: 0px;
	padding: 0px;
}

#fb-rsvp:after, #fb-rsvp-status:after, .fb-rsvp-list:after, .fb-rsvp-modal-status:after {
	content:" ";
	display:block;
	clear:both;
}

.fb-rsvp-status-text, .fb-rsvp-modal-status-text{
	float: left;
	padding: 15px 4px;
	margin:0px;
}

.fb-rsvp-status-image, .fb-rsvp-modal-status-image {
	float:left;
	width:40px;
	height:40px;
}

.fb-rsvp-attending, .fb-rsvp-modal-attending {
	font-weight:bold;
}

.fb-rsvp-modal-attending {font: 11px/16px "Lucida Sans Unicode", "Lucida Grande", Arial, Helvetica, sans-serif; font-weight:bold; color:#545454;}

.fb-rsvp-list, .fb-rsvp-modal-list {
	display: block;
	padding-top: 5px;
}

.fb-rsvp-list-item, .fb-rsvp-modal-list-item  {
	float: left;
	margin: 0px;
	padding: 0 5px 4px 0;
	overflow: hidden;
	width: 50px;
}

.fb-rsvp-list-item .profile-image, .fb-rsvp-modal-list-item .profile-image {
	float: none;
	display: block;
	margin: 0px;
	padding: 0px;
}

.fb-rsvp-list-item .profile-name, .fb-rsvp-modal-list-item .profile-name {
	width: 50px; 
	font-size: 9px;
	font-weight:normal;
	color: #808080;
	overflow: hidden;
	margin: 0px;
	padding: 0px;
	padding-top: 2px;
	text-align: center;
	white-space: nowrap;
}

.fb-rsvp-status-box {
    clear:both;
    background-color:#eee;
    padding:8px;
    margin-bottom:4px;
    position: relative;
    top: 5px;
}

#fb-rsvp-modal-loading {float: none;border: 0px;padding: 40px 190px;margin:0;}
.fb-rsvp-modal-status a  {background:url(../../ticketfly-cms/images/fb-rsvp-sprite.png) -150px 0px; display:block; width:74px; height:25px;text-indent:-60000px; margin:0 0 5px 0;}
.fb-rsvp-modal-status a:hover {background:url(../../ticketfly-cms/images/fb-rsvp-sprite.png) -75px 0px;box-shadow:0 0 2px #999;}
.fb-rsvp-modal-status a:active {background:url(../../ticketfly-cms/images/fb-rsvp-sprite.png) 0px 0px;box-shadow:0 0 2px #999;}
